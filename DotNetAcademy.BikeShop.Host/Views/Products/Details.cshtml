@using DotNetAcademy.BikeShop.Host.ViewModels
@model DotNetAcademy.BikeShop.Host.ViewModels.ProductViewModel

@{
    ViewData["Title"] = Model.Name;
}

<h1>@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-12 col-lg-8">
        <img src="@Model.PathToImage" class="bike-image" alt="@Model.Name" />
    </div>
    <div class="col-12 col-lg-4">
        @{ await Html.RenderPartialAsync("_AddToBasket", new AddToBasketViewModel { Product = Model }); }
    </div>
</div>

<div>
    @Html.ActionLink("Back to overview", "Index", "Products", null, new { @class = "btn btn-outline-secondary" })
</div>
