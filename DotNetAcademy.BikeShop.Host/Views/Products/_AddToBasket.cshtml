@model DotNetAcademy.BikeShop.Host.ViewModels.AddToBasketViewModel

@using (Html.BeginForm("AddToBasket", "Products", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Product.Id)
    <h5>€ @($"{Model.Product.Price:N}")</h5>
    <div class="form-group">
        @Html.LabelFor(model => model.Quantity);
        @Html.TextBoxFor(m => m.Quantity, new { @type = "number", @class="form-control" })
    </div>
    <button type="submit" class="btn btn-success">Add to card</button>
}