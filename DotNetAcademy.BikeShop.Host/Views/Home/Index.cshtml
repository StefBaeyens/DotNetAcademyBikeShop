<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center">
    <div class="col-md-5 p-lg-5 mx-auto my-5">
        <h1 class="display-4 font-weight-normal">Stef's Bike Shop</h1>
        <p class="lead font-weight-normal">This is an awesome bikeshop made for the DotNetAcademy</p>
        <a href="@Url.Action("Index", "Products")"><img class="bike-carousel" alt="Bikes" width="300"></a>
    </div>
</div>

@section Scripts
{
    <script>
        $(function () {
            const images = ["cannondale_moterra_1_md_29_m.jpeg", "conway_ms_627.jpeg", "cannondale_slice_carbon_105.jpeg", "pinarello_nytro_ultegra_disc_h58.jpeg"];

            var indexStr = localStorage.getItem("image-index");
            var index = 3;
            if (indexStr != null) {
                index = parseInt(indexStr);
            }

            index++;
            if (index >= images.length) {
                index = 0;
            }

            console.log(index);

            $(".bike-carousel").attr("src", "images/bikes/" + images[index]);

            localStorage.setItem("image-index", index);
        });
    </script>
}
